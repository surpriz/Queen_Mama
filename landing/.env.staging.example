# STAGING ENVIRONMENT VARIABLES
# Copy this file and configure for Vercel staging project

# Database - Neon Staging Branch
# Get from: https://console.neon.tech → Branches → staging
DATABASE_URL="postgresql://user:pass@ep-xxx-staging.region.aws.neon.tech/neondb"

# NextAuth Configuration
# Generate with: openssl rand -base64 32
AUTH_SECRET="<generate-new-staging-secret>"
AUTH_TRUST_HOST=true
NEXTAUTH_URL="https://staging.queenmama.co"
NEXT_PUBLIC_APP_URL="https://staging.queenmama.co"

# GitHub OAuth - STAGING APP
# Create at: https://github.com/settings/developers
# App Name: Queen Mama Staging
# Homepage: https://staging.queenmama.co
# Callback: https://staging.queenmama.co/api/auth/callback/github
AUTH_GITHUB_ID="<staging-github-client-id>"
AUTH_GITHUB_SECRET="<staging-github-client-secret>"

# Google OAuth - STAGING APP
# Create at: https://console.cloud.google.com/apis/credentials
# App Name: Queen Mama Staging
# Authorized redirect: https://staging.queenmama.co/api/auth/callback/google
AUTH_GOOGLE_ID="<staging-google-client-id>"
AUTH_GOOGLE_SECRET="<staging-google-client-secret>"

# Stripe - TEST MODE ONLY
# Get from: https://dashboard.stripe.com (toggle Test Mode)
# IMPORTANT: Use sk_test_... and pk_test_... keys ONLY
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Stripe Webhook - STAGING
# Endpoint: https://staging.queenmama.co/api/webhooks/stripe
# Events: customer.subscription.*, invoice.*
STRIPE_WEBHOOK_SECRET="whsec_test_..."

# Stripe Price IDs - TEST MODE
# Create test products in Stripe Test Mode Dashboard
STRIPE_PRO_PRICE_ID="price_test_..."
STRIPE_ENTERPRISE_PRICE_ID="price_test_..."

# Encryption Key
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="<generate-new-staging-key>"

# JWT and License Signing
# Generate with: openssl rand -base64 32
JWT_SECRET="<generate-new-staging-jwt-secret>"
# Generate with: openssl rand -hex 32
LICENSE_SECRET="<generate-new-staging-license-secret>"

