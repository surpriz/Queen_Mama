# PRODUCTION ENVIRONMENT VARIABLES
# Configure in Vercel production project

# Database - Neon Main Branch
# Get from: https://console.neon.tech → Branches → main
DATABASE_URL="postgresql://user:pass@ep-xxx.region.aws.neon.tech/neondb"

# NextAuth Configuration
# Generate with: openssl rand -base64 32
AUTH_SECRET="<production-secret-different-from-staging>"
AUTH_TRUST_HOST=true
NEXTAUTH_URL="https://queenmama.co"
NEXT_PUBLIC_APP_URL="https://queenmama.co"

# GitHub OAuth - PRODUCTION APP
# Create at: https://github.com/settings/developers
# App Name: Queen Mama
# Homepage: https://queenmama.co
# Callback: https://queenmama.co/api/auth/callback/github
AUTH_GITHUB_ID="<prod-github-client-id>"
AUTH_GITHUB_SECRET="<prod-github-client-secret>"

# Google OAuth - PRODUCTION APP
# Create at: https://console.cloud.google.com/apis/credentials
# App Name: Queen Mama
# Authorized redirect: https://queenmama.co/api/auth/callback/google
AUTH_GOOGLE_ID="<prod-google-client-id>"
AUTH_GOOGLE_SECRET="<prod-google-client-secret>"

# Stripe - LIVE MODE
# Get from: https://dashboard.stripe.com (Live Mode)
# IMPORTANT: Use sk_live_... and pk_live_... keys
# NEVER use test keys in production!
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_PUBLISHABLE_KEY="pk_live_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_..."

# Stripe Webhook - PRODUCTION
# Endpoint: https://queenmama.co/api/webhooks/stripe
# Events: customer.subscription.*, invoice.*
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs - LIVE MODE
# Create live products in Stripe Live Mode Dashboard
STRIPE_PRO_PRICE_ID="price_..."
STRIPE_ENTERPRISE_PRICE_ID="price_..."

# Encryption Key
# Generate with: openssl rand -hex 32
# MUST be different from staging!
ENCRYPTION_KEY="<generate-new-production-key>"

# ============================================
# SECURITY NOTES
# ============================================
# - NEVER commit this file to Git
# - NEVER share production keys
# - NEVER use production keys locally
# - ALWAYS use different secrets than staging
# - Rotate keys regularly (every 6 months)
# ============================================
