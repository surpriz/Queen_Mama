generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTHENTICATION MODELS (NextAuth.js compatible)
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  apiKeys        ApiKey[]
  subscription   Subscription?
  usageLogs      UsageLog[]
  syncedSessions SyncedSession[]
  devices        Device[]
  refreshTokens  RefreshToken[]

  stripeCustomerId String? @unique

  @@index([role])
  @@index([role, createdAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// DEVICE AUTHENTICATION (macOS App)
// ============================================

model Device {
  id            String    @id @default(cuid())
  userId        String
  name          String
  platform      String
  osVersion     String?
  appVersion    String?
  deviceId      String    @unique
  lastSeenAt    DateTime  @default(now())
  createdAt     DateTime  @default(now())
  isActive      Boolean   @default(true)

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  refreshTokens RefreshToken[]

  @@index([userId])
}

model RefreshToken {
  id          String    @id @default(cuid())
  tokenHash   String    @unique
  userId      String
  deviceId    String
  expiresAt   DateTime
  createdAt   DateTime  @default(now())
  lastUsedAt  DateTime  @default(now())
  revokedAt   DateTime?

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  device      Device    @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([deviceId])
}

model DeviceAuthCode {
  id            String    @id @default(cuid())
  userCode      String    @unique
  deviceCode    String    @unique
  deviceId      String
  deviceName    String?
  platform      String?
  userId        String?
  expiresAt     DateTime
  authorizedAt  DateTime?
  createdAt     DateTime  @default(now())

  @@index([userCode])
  @@index([deviceCode])
}

// ============================================
// API KEYS MANAGEMENT
// ============================================

// User-specific API keys (legacy, for user-managed keys)
model ApiKey {
  id         String         @id @default(cuid())
  userId     String
  name       String
  provider   ApiKeyProvider
  keyHash    String
  keyPrefix  String
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  lastUsedAt DateTime?
  isActive   Boolean        @default(true)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
}

// System-wide API keys managed by admin (for proxy service)
model AdminApiKey {
  id              String         @id @default(cuid())
  provider        ApiKeyProvider @unique
  encryptedKey    String         @db.Text
  keyPrefix       String         // First 8 chars for display (sk-abc...)
  isActive        Boolean        @default(true)
  lastUsedAt      DateTime?
  usageCount      Int            @default(0)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  createdBy       String         // Admin user ID who created it

  @@index([provider])
}

enum ApiKeyProvider {
  OPENAI
  ANTHROPIC
  GEMINI
  DEEPGRAM
  GROK
  ASSEMBLYAI
}

enum UserRole {
  USER
  ADMIN
  BLOCKED
}

// ============================================
// SUBSCRIPTION & BILLING
// ============================================

model Subscription {
  id                   String             @id @default(cuid())
  userId               String             @unique
  plan                 SubscriptionPlan   @default(FREE)
  status               SubscriptionStatus @default(ACTIVE)
  stripeSubscriptionId String?            @unique
  stripePriceId        String?
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  invoices Invoice[]
}

enum SubscriptionPlan {
  FREE
  PRO
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
  INCOMPLETE
}

model Invoice {
  id               String   @id @default(cuid())
  subscriptionId   String
  stripeInvoiceId  String   @unique
  amountPaid       Int
  currency         String   @default("usd")
  status           String
  invoicePdfUrl    String?
  hostedInvoiceUrl String?
  periodStart      DateTime
  periodEnd        DateTime
  createdAt        DateTime @default(now())

  subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
}

// ============================================
// SESSION ANALYTICS (Synced from macOS app)
// ============================================

model SyncedSession {
  id          String    @id @default(cuid())
  userId      String
  deviceId    String
  originalId  String
  title       String
  startTime   DateTime
  endTime     DateTime?
  duration    Int?
  transcript  String?   @db.Text
  summary     String?   @db.Text
  actionItems Json?
  modeUsed    String?
  version     Int       @default(1)
  checksum    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  aiResponses SyncedAIResponse[]

  @@unique([userId, deviceId, originalId])
  @@index([userId, startTime])
}

model SyncedAIResponse {
  id              String   @id @default(cuid())
  syncedSessionId String
  originalId      String
  type            String
  content         String   @db.Text
  provider        String
  latencyMs       Int?
  timestamp       DateTime

  syncedSession SyncedSession @relation(fields: [syncedSessionId], references: [id], onDelete: Cascade)
}

// ============================================
// USAGE TRACKING
// ============================================

model UsageLog {
  id         String   @id @default(cuid())
  userId     String
  action     String
  provider   String?
  tokensUsed Int?
  cost       Float?
  metadata   Json?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}
