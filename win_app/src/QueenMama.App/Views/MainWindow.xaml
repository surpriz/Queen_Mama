<Window x:Class="QueenMama.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Queen Mama"
        Height="700"
        Width="1100"
        MinHeight="500"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="200" MaxWidth="350"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
                Background="{DynamicResource SidebarBackgroundBrush}"
                BorderThickness="0,0,1,0"
                BorderBrush="{DynamicResource BorderBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo & Status -->
                <StackPanel Grid.Row="0" Margin="20,20,20,10">
                    <TextBlock Text="Queen Mama"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryBrush}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Ellipse Width="8" Height="8"
                                 Fill="{Binding StatusColor}"
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding StatusText}"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   FontSize="12"
                                   Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding NavigationItems}"
                         SelectedItem="{Binding SelectedNavItem}"
                         Background="Transparent"
                         BorderThickness="0"
                         Margin="10,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="10,8">
                                <TextBlock Text="{Binding Icon}"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="16"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Title}"
                                           Margin="12,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- User Info & Settings -->
                <Border Grid.Row="2"
                        BorderThickness="0,1,0,0"
                        BorderBrush="{DynamicResource BorderBrush}"
                        Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Ellipse Width="36" Height="36"
                                 Fill="{DynamicResource PrimaryBrush}"/>

                        <StackPanel Grid.Column="1" Margin="10,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding UserName}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Text="{Binding LicenseTier}"
                                       FontSize="11"
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </StackPanel>

                        <Button Grid.Column="2"
                                Content="&#xE713;"
                                FontFamily="Segoe MDL2 Assets"
                                Command="{Binding OpenSettingsCommand}"
                                Style="{DynamicResource IconButtonStyle}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1"
                      Width="1"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="{DynamicResource BorderBrush}"/>

        <!-- Main Content -->
        <ContentControl Grid.Column="2"
                        Content="{Binding CurrentView}"/>
    </Grid>
</Window>
