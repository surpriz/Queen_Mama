<Window x:Class="QueenMama.App.Views.Overlay.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Queen Mama"
        Width="420"
        Height="100"
        MinWidth="300"
        MinHeight="80"
        MaxWidth="500"
        MaxHeight="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="Manual">

    <Window.Resources>
        <!-- Animation for expand/collapse -->
        <Storyboard x:Key="ExpandAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Height"
                             To="400"
                             Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="CollapseAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Height"
                             To="100"
                             Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Border Background="#E60A0A0A"
            CornerRadius="12"
            BorderBrush="#2D2D2D"
            BorderThickness="1"
            Padding="0"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header / Collapsed View -->
            <Border Grid.Row="0"
                    Background="Transparent"
                    Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Indicator -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <Ellipse Width="8" Height="8"
                                 Fill="{Binding StatusColor}"
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Queen Mama"
                                   Foreground="#FFFFFF"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Tab Bar (collapsed view) -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Visibility="{Binding IsCollapsed, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button Content="Assist"
                                Style="{StaticResource TabButtonStyle}"
                                Command="{Binding AssistCommand}"
                                IsEnabled="{Binding IsSessionActive}"/>
                        <Button Content="Say"
                                Style="{StaticResource TabButtonStyle}"
                                Command="{Binding WhatToSayCommand}"
                                IsEnabled="{Binding IsSessionActive}"
                                Margin="8,0,0,0"/>
                        <Button Content="Q?"
                                Style="{StaticResource TabButtonStyle}"
                                Command="{Binding FollowUpCommand}"
                                IsEnabled="{Binding IsSessionActive}"
                                Margin="8,0,0,0"/>
                        <Button Content="Recap"
                                Style="{StaticResource TabButtonStyle}"
                                Command="{Binding RecapCommand}"
                                IsEnabled="{Binding IsSessionActive}"
                                Margin="8,0,0,0"/>
                    </StackPanel>

                    <!-- Controls -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <!-- Audio Level -->
                        <ProgressBar Width="40"
                                     Height="4"
                                     Value="{Binding AudioLevel}"
                                     Maximum="1"
                                     Foreground="#7C3AED"
                                     Background="#2D2D2D"
                                     VerticalAlignment="Center"
                                     Visibility="{Binding IsSessionActive, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Expand/Collapse -->
                        <Button Content="&#xE710;"
                                FontFamily="Segoe MDL2 Assets"
                                Style="{StaticResource IconButtonStyle}"
                                Command="{Binding ToggleExpandCommand}"
                                ToolTip="Expand/Collapse"
                                Margin="8,0,0,0"/>

                        <!-- Close -->
                        <Button Content="&#xE8BB;"
                                FontFamily="Segoe MDL2 Assets"
                                Style="{StaticResource IconButtonStyle}"
                                Command="{Binding HideCommand}"
                                ToolTip="Hide (Ctrl+\)"
                                Margin="4,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Expanded Content -->
            <Border Grid.Row="1"
                    Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"
                    Padding="16,0,16,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Tab Bar (expanded view) -->
                    <Border Grid.Row="0"
                            Background="#1F1F1F"
                            CornerRadius="8"
                            Padding="4"
                            Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <RadioButton Content="Assist"
                                         Style="{StaticResource TabRadioButtonStyle}"
                                         IsChecked="{Binding IsAssistTab}"
                                         Command="{Binding SelectTabCommand}"
                                         CommandParameter="Assist"/>
                            <RadioButton Content="What to Say"
                                         Style="{StaticResource TabRadioButtonStyle}"
                                         IsChecked="{Binding IsWhatToSayTab}"
                                         Command="{Binding SelectTabCommand}"
                                         CommandParameter="WhatToSay"
                                         Margin="4,0,0,0"/>
                            <RadioButton Content="Follow-up"
                                         Style="{StaticResource TabRadioButtonStyle}"
                                         IsChecked="{Binding IsFollowUpTab}"
                                         Command="{Binding SelectTabCommand}"
                                         CommandParameter="FollowUp"
                                         Margin="4,0,0,0"/>
                            <RadioButton Content="Recap"
                                         Style="{StaticResource TabRadioButtonStyle}"
                                         IsChecked="{Binding IsRecapTab}"
                                         Command="{Binding SelectTabCommand}"
                                         CommandParameter="Recap"
                                         Margin="4,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Response Content -->
                    <Border Grid.Row="1"
                            Background="#1A1A1A"
                            CornerRadius="8"
                            Padding="12">
                        <Grid>
                            <!-- Loading -->
                            <StackPanel Visibility="{Binding IsGenerating, Converter={StaticResource BoolToVisibilityConverter}}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <ProgressBar IsIndeterminate="True"
                                             Width="100"
                                             Height="2"
                                             Foreground="#7C3AED"/>
                                <TextBlock Text="Generating..."
                                           Foreground="#9CA3AF"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Margin="0,8,0,0"/>
                            </StackPanel>

                            <!-- Response Text -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          Visibility="{Binding HasResponse, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding CurrentResponse}"
                                           Foreground="#FFFFFF"
                                           FontSize="13"
                                           TextWrapping="Wrap"
                                           LineHeight="20"/>
                            </ScrollViewer>

                            <!-- Empty State -->
                            <TextBlock Text="Press a button above or use Ctrl+Enter to get suggestions"
                                       Foreground="#6B7280"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding ShowEmptyState, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
